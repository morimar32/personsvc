"""
This is a test comment on a Person
"""
type Person {
  """
  This is a test comment on the Id property of a Person
  """
  id: String!
  FirstName: String!
  MiddleName: String
  LastName: String!
  Suffix: String
  CreatedDateTime: String!
  UpdatedDateTime: String
}

type Query {
  persons: [Person!]!
}

input AddPersonRequest {
  FirstName: String!
  MiddleName: String
  LastName: String!
  Suffix: String
}

type Mutation {
  AddPerson(input: AddPersonRequest!): Person!
}